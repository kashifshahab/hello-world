import java.util.Scanner;
class SumEachEvenDigit 
{
	public static void main(String[] args) 
	{
		Scanner s1=new Scanner(System.in);
		System.out.println("enter the num");
		int num=s1.nextInt();
		int sum=0;
	while (num>0)
	{
		int digit=num%10;
		if (digit%2==0)
		{
			sum=sum+digit;
		}
		
		num/=10;
	}
		System.out.println(sum);
	}
}
